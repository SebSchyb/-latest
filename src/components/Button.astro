---
const { body = "badge", color ="green"} = Astro.props;
---


<div>
<a href="#">
<h1 class={color}>
    {body}
</h1>
</a>
</div>



<style>
h1 {
    display: inline-flex;
    padding: 0.9375rem 2.125rem;
    align-items: flex-start;
    gap: 0.625rem;
    flex-shrink: 0;
    border-radius: 2.625rem;
    font-family: var(--paragraph);
    font-size: 1.125rem;
    font-style: normal;
    font-weight: 600;
    line-height: 160%;
}

.black{
    background-color: var(--black);
    color: var(--white);
    border: none;
}
.black:hover{
    background-color: var(--white);
    color: var(--black);
    border: solid var(--black);
}

.yellow{
    background-color: var(--yellow);
    color: var(--black);
}
.yellow:hover{
    background-color: var(--black);
    color: var(--white);
}

</style>