---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";const images = 
import.meta.glob<{ default: ImageMetadata }>(  "/src/assets/**/*.{jpeg,jpg,png,gif}");const { name, description, imgPath } = Astro.props;if (!images[imgPath])  throw new Error(    `"${imgPath}" does not exist in glob: "src/assets/**/*.{jpeg,jpg,png,gif}"`  );


---




<article class="card">
    
    <Image class="fit" src={images[imgPath]()} alt={name} />
    <div>
        <p class="yellowcontainer">{name}</p>
        <h1>{description}</h1> 

    </div>
</article>

<style>

.card {
/* overflow: hidden; */
min-height: 40vh;
display: grid;
grid-template-columns: repeat(12,1fr);
}
div{
    border-radius: 1.8125rem;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(5.5px);
    grid-column: 2 / span 6;
    grid-row: 1;
    align-self: center;
    display: inline-flex;
    padding: 3rem 3.75rem 3.625rem 3.75rem;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
}
.fit {
    grid-column: 1/span 12;
    grid-row: 1;
}



.yellowcontainer {
    color:var(--black);
    background: var(--yellow);
    border-radius: 1.25rem;
    display: inline-flex;
    padding: 0rem 0.9375rem;
    align-items: flex-start;
    gap: 0.625rem;
}

    
</style>